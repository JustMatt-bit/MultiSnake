<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <!-- Bootstrap Responsive viewport tag-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SnakeMultiplayer</title>
    <!-- Bootsrap css   -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Bootsrap js -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.14/signalr.min.js"></script>
</head>
<body>
    <nav id="navigation_bar" class="navbar navbar-expand-md navbar-light bg-light d-flex justify-content-between">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex flex-row">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-item nav-link bg-light" asp-area="" asp-controller="Lobby" asp-action="JoinLobby">Join</a>
                    <a class="nav-item nav-link bg-light" asp-area="" asp-controller="Lobby" asp-action="CreateLobby">Create</a>
                    <a class="nav-item nav-link bg-light" asp-area="" asp-controller="Home" asp-action="Leaderboard">Leaderboard</a>
                </div>
                <div class="d-flex flex-row justify-content-between px-3 py-2" style="gap: 10px">
                    <p style="margin: 0">Welcome, @User.Identity.Name!</p>
                    <a asp-controller="Account" asp-action="Logout">Logout</a>
                </div>
            }
    </nav>
    <div class="container" style="height:100vh">
        @RenderBody()
    </div>
</body>
</html>
