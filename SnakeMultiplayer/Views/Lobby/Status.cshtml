@{
    var lobbies = ViewData["Lobbies"] == null
        ? new List<Tuple<string, string>>() 
        : (List<Tuple<string, string>>)ViewData["Lobbies"];
    int i;
}

<h3> Current lobby list:</h3> <br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Players</th>
        </tr>
    </thead>
    <tbody>
        @for (i = 0; i < lobbies.Count; i++)
        {
            <tr>
                <th scope="row">@i.ToString()</th>
                <td>@lobbies[i].Item1</td>
                <td>@lobbies[i].Item2</td>
            </tr>
        }

    </tbody>
</table>